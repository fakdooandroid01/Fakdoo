<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackAlpha"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/drawable_rectangle_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawable="@color/colorBlack"
            android:drawableStart="@drawable/ic_edit"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:fontFamily="@font/semibold"
            android:drawableTint="@color/colorBlack"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorBlack"
            android:text="@string/edit_post" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorGray" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawable="@color/colorBlack"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:fontFamily="@font/semibold"
            android:drawableTint="@color/colorBlack"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorBlack"
            android:text="@string/remove_post" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_rectangle_white"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:padding="15dp"
            android:fontFamily="@font/semibold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorSkyDarkBlue"/>
    </LinearLayout>
</LinearLayout>
